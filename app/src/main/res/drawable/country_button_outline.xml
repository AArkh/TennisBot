<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/invisible" /> <!-- Background color on button press -->
            <stroke android:color="@color/tb_primary_green" android:width="2dp" /> <!-- Outline color on button press -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/invisible" /> <!-- Default background color -->
            <stroke android:color="@color/tb_gray_border" android:width="2dp" /> <!-- Default outline color -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>


