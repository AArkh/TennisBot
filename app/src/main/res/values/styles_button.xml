<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.TennisBot.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:includeFontPadding">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">10dp</item>
        <!-- todo add font to v28, they're using some Gilroy one -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
        <!--By default, they are 6dp: for our buttons they looks too heavy with these values-->
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <!--Added fake icon to prevent extra paddings on buttons with normal icons-->
        <item name="icon">@drawable/ic_fake_line_24</item>
    </style>

    <style name="Widget.TennisBot.Button.Active" parent="Widget.TennisBot.Button">
        <item name="android:background">@drawable/btn_bkg_enabled</item>
        <item name="android:textColor">@color/tb_white</item>
        <item name="iconTint">#fbfbfb</item>
    </style>

    <style name="Widget.TennisBot.Button.Secondary" parent="Widget.TennisBot.Button">
        <item name="android:background">@drawable/btn_bkg_enabled_secondary</item>
        <item name="android:textColor">@color/tb_gray_active</item>
    </style>

    <style name="Widget.TennisBot.Button.Inactive" parent="Widget.TennisBot.Button">
        <item name="android:background">@drawable/btn_bkg_disabled</item>
        <item name="android:textColor">@color/tb_white</item>
    </style>

    <style name="Widget.TennisBot.Button.Loading" parent="Widget.TennisBot.Button.Active"/>

</resources>
