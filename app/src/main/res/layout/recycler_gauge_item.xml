<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<include
		android:id="@+id/gauge_item"
		layout="@layout/request_gauge_item"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginHorizontal="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/comment_text"/>

	<EditText
		android:id="@+id/comment_text"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:text="@string/request_creation_comment"
		android:textSize="14sp"
		android:gravity="start"
		android:hint="@string/comment_text_hint"
		android:textColorHint="@color/tb_gray_gray"
		android:layout_marginTop="16dp"
		android:layout_marginHorizontal="16dp"
		android:layout_marginBottom="16dp"
		android:padding="10dp"
		android:background="@drawable/country_button_outline"
		app:layout_constraintTop_toBottomOf="@id/gauge_item"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>