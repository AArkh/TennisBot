<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/button_lower_fill_inactive_background">

<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/tb_white"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".feed.insertscore.InsertScoreFragment">

	<ImageView
		android:id="@+id/back_button"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="6dp"
		android:src="@drawable/chevron_left_wide"
		android:visibility="visible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:tint="@color/tb_gray_active" />

	<FrameLayout
		android:id="@+id/player1_photo"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_marginTop="26dp"
		android:layout_marginStart="51dp"
		android:background="@drawable/circle_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="20dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/back_button">

		<com.google.android.material.imageview.ShapeableImageView
			android:id="@+id/player1_image"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/user"
			android:visibility="visible"
			app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

	</FrameLayout>

	<TextView
		android:id="@+id/player1_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/namesurname_name"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		app:layout_constraintEnd_toEndOf="@id/player1_photo"
		app:layout_constraintStart_toStartOf="@id/player1_photo"
		app:layout_constraintTop_toBottomOf="@id/player1_photo" />

	<com.airbnb.lottie.LottieAnimationView
		android:id="@+id/game_animation"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="visible"
		android:layout_marginBottom="-15dp"
		android:padding="5dp"
		app:lottie_autoPlay="true"
		app:lottie_loop="false"
		app:lottie_rawRes="@raw/game"
		app:layout_constraintStart_toEndOf="@id/player1_photo"
		app:layout_constraintEnd_toStartOf="@id/player2_photo"
		app:layout_constraintTop_toBottomOf="@id/back_button"
		app:layout_constraintBottom_toBottomOf="@id/player1_name"/>

	<FrameLayout
		android:id="@+id/player2_photo"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_marginTop="26dp"
		android:layout_marginEnd="51dp"
		android:background="@drawable/circle_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="20dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/back_button">

		<com.google.android.material.imageview.ShapeableImageView
			android:id="@+id/player2_image"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/user"
			android:visibility="visible"
			app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

	</FrameLayout>

	<TextView
		android:id="@+id/player2_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/namesurname_name"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		app:layout_constraintEnd_toEndOf="@id/player2_photo"
		app:layout_constraintStart_toStartOf="@id/player2_photo"
		app:layout_constraintTop_toBottomOf="@id/player2_photo" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/sets_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/player1_name"
		app:layout_constraintBottom_toTopOf="@id/super_tie_break_button"/>

	<TextView
		android:id="@+id/super_tie_break_button"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="8dp"
		android:background="@drawable/outline_100x2"
		android:clickable="true"
		android:focusable="true"
		android:foreground="@drawable/ripple_green_corners_100dp"
		android:gravity="center"
		android:text="@string/super_tie_break"
		android:textSize="14sp"
		android:textColor="@color/tb_primary_green"
		android:paddingVertical="10dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/add_set_button"
		app:layout_constraintTop_toBottomOf="@id/sets_container" />

	<TextView
		android:id="@+id/add_set_button"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="20dp"
		android:background="@drawable/background_corners_100dp"
		android:backgroundTint="@color/tb_bland_green"
		android:clickable="true"
		android:focusable="true"
		android:foreground="@drawable/ripple_green_corners_100dp"
		android:gravity="center"
		android:text="@string/add_set"
		android:textSize="14sp"
		android:textColor="@color/tb_primary_green"
		android:paddingVertical="10dp"
		app:layout_constraintStart_toEndOf="@id/super_tie_break_button"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/sets_container" />

	<View
		android:id="@+id/border_view"
		android:layout_width="match_parent"
		android:layout_height="6dp"
		android:layout_marginTop="20dp"
		android:background="@color/tb_bg"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/super_tie_break_button"/>

	<TextView
		android:id="@+id/media_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginStart="20dp"
		android:text="Медиа матча"
		android:textColor="@color/tb_black"
		android:textSize="17sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/border_view" />

	<ImageView
		android:id="@+id/add_photo_holder"
		android:layout_width="0dp"
		android:layout_height="171dp"
		android:layout_marginTop="12dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="12dp"
		android:src="@drawable/dotted_background_corners_8dp"
		app:layout_constraintTop_toBottomOf="@id/media_title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/add_video_holder"/>

	<TextView
		android:id="@+id/photo_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/add_photo"
		android:textSize="13sp"
		android:textColor="@color/tb_gray_light"
		app:drawableTopCompat="@drawable/mountain"
		app:layout_constraintStart_toStartOf="@id/add_photo_holder"
		app:layout_constraintEnd_toEndOf="@id/add_photo_holder"
		app:layout_constraintTop_toTopOf="@id/add_photo_holder"
		app:layout_constraintBottom_toBottomOf="@id/add_photo_holder" />

	<ImageView
		android:id="@+id/add_video_holder"
		android:layout_width="0dp"
		android:layout_height="171dp"
		android:layout_marginTop="12dp"
		android:layout_marginEnd="20dp"
		android:src="@drawable/dotted_background_corners_8dp"
		app:layout_constraintTop_toBottomOf="@id/media_title"
		app:layout_constraintStart_toEndOf="@id/add_photo_holder"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/video_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/add_video"
		android:textSize="13sp"
		android:textColor="@color/tb_gray_light"
		app:drawableTopCompat="@drawable/play_circle"
		app:layout_constraintStart_toStartOf="@id/add_video_holder"
		app:layout_constraintEnd_toEndOf="@id/add_video_holder"
		app:layout_constraintTop_toTopOf="@id/add_video_holder"
		app:layout_constraintBottom_toBottomOf="@id/add_video_holder" />

	<View
		android:id="@+id/side_note_background"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="24dp"
		android:layout_marginHorizontal="20dp"
		android:layout_marginBottom="-16dp"
		android:background="@drawable/search_background"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/add_photo_holder"
		app:layout_constraintBottom_toBottomOf="@id/side_note_text"/>

	<TextView
		android:id="@+id/side_note_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginHorizontal="16dp"
		android:text="@string/side_note_title_0"
		android:textColor="@color/tb_primary_green"
		android:textSize="16sp"
		app:layout_constraintStart_toStartOf="@id/side_note_background"
		app:layout_constraintTop_toTopOf="@id/side_note_background"/>

	<TextView
		android:id="@+id/side_note_text"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:text="@string/side_note_hint_multiplier"
		android:textSize="12sp"
		app:layout_constraintStart_toStartOf="@id/side_note_background"
		app:layout_constraintEnd_toEndOf="@id/side_note_background"
		app:layout_constraintTop_toBottomOf="@id/side_note_title" />

	<Button
		android:id="@+id/buttonSend"
		style="@style/Widget.TennisBot.ButtonFlat.Inactive"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="81.5dp"
		android:enabled="false"
		android:text="@string/onboarding_continue_button"
		app:layout_constraintTop_toBottomOf="@id/side_note_background"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>