<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="52dp"
	android:layout_marginStart="6dp"
	android:layout_marginEnd="16dp"
	android:background="@drawable/background_corners_8dp">

	<ImageView
		android:id="@+id/bonus_icon"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginVertical="6dp"
		android:layout_marginStart="12dp"
		android:background="@drawable/background_corners_8dp"
		android:backgroundTint="@color/tb_purple"
		android:padding="7dp"
		android:src="@drawable/bonus_star"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/bonuses"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:gravity="start|center"
		android:text="@string/two_ratings"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/bonus_icon"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/bonuses_change"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:paddingStart="4dp"
		android:paddingEnd="12dp"
		android:gravity="start|center"
		android:text="@string/bonuses_change"
		android:textColor="@color/tb_primary_green"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/bonuses"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>