<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginStart="6dp"
	android:background="@drawable/background_corners_8dp"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<tennis.bot.mobile.utils.view.ImageSeriesView
		android:id="@+id/players_left_photos"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginStart="12dp"
		android:layout_marginEnd="18.5dp"
		android:layout_marginVertical="10dp"
		app:withBorder="true"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/score"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<TextView
		android:id="@+id/score"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="6dp"
		android:text="2 - 1"
		android:textSize="14sp"
		android:textColor="@color/tb_black"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@id/match_title"/>

	<TextView
		android:id="@+id/match_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/roboto"
		android:layout_marginBottom="6dp"
		android:text="@string/meetings"
		android:textColor="@color/tb_gray_active"
		android:textSize="12sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/score" />

	<tennis.bot.mobile.utils.view.ImageSeriesView
		android:id="@+id/players_right_photos"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginVertical="10dp"
		android:layout_marginEnd="12dp"
		android:layout_marginStart="18.5dp"
		app:withBorder="true"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/score"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>