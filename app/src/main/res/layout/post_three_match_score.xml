<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="52dp"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_marginStart="16dp"
	android:background="@drawable/background_corners_8dp"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<TextView
		android:id="@+id/player1_name_surname"
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginStart="16dp"
		android:text="@string/name_surname_default"
		android:textColor="@color/tb_black"
		android:textSize="15sp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/player2_name_surname"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/game_sets_container"
		app:layout_constraintVertical_chainStyle="packed"/>

	<TextView
		android:id="@+id/player2_name_surname"
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="5dp"
		android:text="@string/name_surname_default"
		android:textColor="@color/tb_gray_active"
		android:textSize="15sp"
		app:layout_constraintTop_toBottomOf="@id/player1_name_surname"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/game_sets_container"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/game_sets_container"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginEnd="12dp"
		android:orientation="horizontal"
		app:reverseLayout="true"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
		tools:listitem="@layout/recycler_set_result_item"
		tools:itemCount="3"
		app:layout_constraintStart_toEndOf="@id/player1_name_surname"
		app:layout_constraintTop_toTopOf="@id/player1_name_surname"
		app:layout_constraintBottom_toBottomOf="@id/player2_name_surname"
		app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>