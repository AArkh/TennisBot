<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@drawable/background_corners_16dp"
	android:layout_marginTop="8dp"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<TextView
		android:id="@+id/match_type_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginVertical="12dp"
		android:text="@string/match_result_single"
		android:textSize="13sp"
		android:textColor="@color/tb_gray_gray"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<View
		android:id="@+id/underline"
		android:layout_width="match_parent"
		android:layout_height="1.5dp"
		android:layout_marginTop="12dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/match_type_title"
		android:background="@drawable/underline"/>

	<tennis.bot.mobile.utils.view.ImageSeriesView
		android:id="@+id/player_photo"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginVertical="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/underline"/>

	<TextView
		android:id="@+id/name_surname"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="@string/name_surname_default"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		android:layout_marginStart="12dp"
		app:layout_constraintStart_toEndOf="@id/player_photo"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/player_photo"
		app:layout_constraintBottom_toTopOf="@id/sub_title"/>

	<TextView
		android:id="@+id/sub_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/lost_to_subtitle"
		android:textColor="@color/tb_gray_gray"
		android:textSize="13sp"
		android:layout_marginStart="12dp"
		app:layout_constraintStart_toEndOf="@id/player_photo"
		app:layout_constraintTop_toBottomOf="@id/name_surname"
		app:layout_constraintBottom_toBottomOf="@id/player_photo"/>

	<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/item_pictures_pager"
		android:layout_width="match_parent"
		android:layout_height="393dp"
		android:layout_marginTop="12dp"
		android:scaleType="centerCrop"
		android:visibility="visible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/player_photo"/>

	<ImageView
		android:id="@+id/itemPicture"
		android:layout_width="match_parent"
		android:layout_height="393dp"
		android:layout_marginTop="12dp"
		android:scaleType="centerCrop"
		android:visibility="invisible"
		android:orientation="horizontal"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/player_photo"/>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/results_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
		tools:listitem="@layout/post_three_match_score"
		android:layout_marginTop="12dp"
		app:layout_constraintTop_toBottomOf="@id/item_pictures_pager"
		app:layout_constraintStart_toStartOf="parent"/>

	<TextView
		android:id="@+id/like_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="18dp"
		android:text="99"
		android:textColor="@color/tb_gray_gray"
		android:gravity="center"
		app:layout_constraintTop_toBottomOf="@id/results_container"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:drawableLeftCompat="@drawable/fire" />

	<com.airbnb.lottie.LottieAnimationView
		android:id="@+id/like_anim"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:gravity="start"
		app:lottie_rawRes="@raw/on_like_pressed"
		app:layout_constraintTop_toTopOf="@id/like_button"
		app:layout_constraintBottom_toBottomOf="@id/like_button"
		app:layout_constraintStart_toStartOf="@id/like_button"
		app:layout_constraintEnd_toEndOf="@id/like_button"/>

	<TextView
		android:id="@+id/message_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="18dp"
		android:text=""
		android:gravity="center"
		app:layout_constraintTop_toBottomOf="@id/results_container"
		app:layout_constraintStart_toEndOf="@id/like_button"
		app:layout_constraintBottom_toBottomOf="parent"
		app:drawableLeftCompat="@drawable/telegram_big" />

	<com.google.android.material.tabs.TabLayout
		android:id="@+id/tabLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:tabGravity="center"
		app:tabIndicatorHeight="0dp"
		app:tabPaddingStart="0dp"
		app:tabPaddingEnd="10dp"
		app:layout_constraintTop_toTopOf="@id/date"
		app:layout_constraintStart_toEndOf="@id/message_button"
		app:layout_constraintEnd_toStartOf="@id/date"
		app:layout_constraintBottom_toBottomOf="@id/date"/>

	<TextView
		android:id="@+id/date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="18dp"
		android:text="@string/time_ago"
		android:textSize="12sp"
		android:textColor="@color/tb_gray_gray"
		android:gravity="center"
		app:layout_constraintTop_toBottomOf="@id/results_container"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>