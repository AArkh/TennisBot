<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".feed.searchopponent.SearchOpponentsFragment">

	<ImageView
		android:id="@+id/back_button"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="6dp"
		android:src="@drawable/chevron_left_wide"
		android:visibility="visible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:tint="@color/tb_gray_active" />

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/opponent_search"
		android:textColor="@color/tb_black"
		android:textSize="17sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/search_bar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="20dp"
		android:layout_marginTop="22dp"
		android:hint="@string/find"
		android:textColorHint="@color/tb_gray_light"
		app:boxStrokeWidth="-1dp"
		app:boxStrokeWidthFocused="-1dp"
		app:endIconDrawable="@drawable/x"
		app:endIconMode="clear_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/title"
		app:startIconDrawable="@drawable/search_lg"
		app:startIconTint="@color/tb_gray_active">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/search_bar_et"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:lines="1"
			android:inputType="text"
			android:background="@drawable/search_background" />
	</com.google.android.material.textfield.TextInputLayout>

	<com.airbnb.lottie.LottieAnimationView
		android:id="@+id/cards_animation"
		android:layout_width="0dp"
		android:layout_height="235dp"
		android:layout_marginTop="-48dp"
		android:layout_marginHorizontal="79dp"
		app:lottie_autoPlay="true"
		app:lottie_loop="false"
		app:lottie_rawRes="@raw/cards"
		app:layout_constraintTop_toBottomOf="@id/search_bar_layout"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@id/hint_title"/>

	<TextView
		android:id="@+id/hint_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="-60dp"
		android:text="@string/opponents_single_hint_title"
		android:textColor="@color/tb_black"
		android:textSize="17sp"
		android:fontFamily="@font/roboto_medium"
		app:layout_constraintTop_toBottomOf="@id/cards_animation"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/hint_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:gravity="center"
		android:text="@string/opponents_single_hint_text"
		android:textColor="@color/tb_gray_dark"
		android:textSize="13sp"
		android:fontFamily="@font/roboto_medium"
		app:layout_constraintTop_toBottomOf="@id/hint_title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/opponents_container"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="12dp"
		android:background="@color/tb_bg"
		android:visibility="gone"
		app:layout_constraintBottom_toTopOf="@id/buttonNext"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/search_bar_layout" />

	<Button
		android:id="@+id/buttonNext"
		style="@style/Widget.TennisBot.Button.Inactive"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="20dp"
		android:layout_marginBottom="8dp"
		android:enabled="false"
		android:text="@string/onboarding_continue_button"
		app:layout_constraintStart_toEndOf="@id/imageSeriesView"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<tennis.bot.mobile.utils.view.ImageSeriesView
		android:id="@+id/imageSeriesView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:visibility="gone"
		app:withBorder="true"
		app:layout_constraintTop_toTopOf="@id/buttonNext"
		app:layout_constraintBottom_toBottomOf="@id/buttonNext"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/buttonNext"/>

	<ProgressBar
		android:id="@+id/loadingBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="150dp"
		android:visibility="visible"
		android:layout_gravity="center"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<include
		android:id="@+id/error_layout"
		layout="@layout/error_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>