<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".profile.edit.EditProfileFragment">

	<ImageView
		android:id="@+id/back_button"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="6dp"
		android:src="@drawable/chevron_vertical"
		android:visibility="visible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:tint="@color/tb_gray_active" />

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/edit_profile_title"
		android:textColor="@color/tb_black"
		android:textSize="16sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/options_button"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_marginEnd="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="6dp"
		android:src="@drawable/options_dots"
		android:visibility="visible"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:tint="@color/tb_gray_active" />

	<FrameLayout
		android:id="@+id/account_photo_frame"
		android:layout_width="92dp"
		android:layout_height="92dp"
		android:padding="2dp"
		android:background="@drawable/circle_background"
		android:backgroundTint="@color/tb_white"
		android:layout_marginTop="35.5dp"
		android:elevation="10dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/title">

		<ImageView
			android:id="@+id/placeholder_photo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@drawable/circle_background"
			android:backgroundTint="@color/tb_gray_border"
			android:padding="27dp"
			android:src="@drawable/plus"
			android:visibility="visible"
			app:strokeColor="@android:color/white"
			app:strokeWidth="3dp"
			app:tint="@color/tb_gray_active" />

		<com.google.android.material.imageview.ShapeableImageView
			android:id="@+id/account_photo"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
			android:scaleType="centerCrop"
			android:visibility="gone" />
	</FrameLayout>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/categories_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:layout_marginHorizontal="20dp"
		android:background="@drawable/country_button_outline"
		app:layout_constraintTop_toBottomOf="@id/account_photo_frame"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>