<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/search_background"
	android:backgroundTint="@color/tb_white"
	android:layout_marginHorizontal="8dp"
	android:layout_marginTop="20dp">

	<include
		android:id="@+id/player1_layout"
		layout="@layout/match_item_player"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="13dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/match_title"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/score"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="44dp"
		android:text="2 - 1"
		android:textSize="24sp"
		android:textColor="@color/tb_black"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/match_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Личные встречи"
		android:textSize="12sp"
		android:textColor="@color/tb_gray_active"
		android:fontFamily="@font/roboto"
		app:layout_constraintTop_toBottomOf="@id/score"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<include
		android:id="@+id/player2_layout"
		layout="@layout/match_item_player"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="13dp"
		app:layout_constraintStart_toEndOf="@id/match_title"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<View
		android:id="@+id/score_board"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="46dp"
		android:layout_marginHorizontal="12dp"
		android:background="@drawable/search_background"
		app:layout_constraintTop_toBottomOf="@id/match_title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="parent"
		app:layout_constraintBottom_toTopOf="@id/date_time"/>

	<TextView
		android:id="@+id/player1_name_surname"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="11dp"
		android:layout_marginStart="16dp"
		android:text="@string/name_surname_default"
		android:textColor="@color/tb_black"
		android:textSize="15sp"
		app:layout_constraintTop_toTopOf="@id/score_board"
		app:layout_constraintBottom_toTopOf="@id/player2_name_surname"
		app:layout_constraintStart_toStartOf="@id/score_board"

		app:layout_constraintVertical_chainStyle="packed"/>

	<TextView
		android:id="@+id/player2_name_surname"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="12dp"
		android:text="@string/name_surname_default"
		android:textColor="@color/tb_gray_active"
		android:textSize="15sp"
		app:layout_constraintTop_toBottomOf="@id/player1_name_surname"
		app:layout_constraintBottom_toBottomOf="@id/score_board"
		app:layout_constraintStart_toStartOf="@id/score_board" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/game_sets_container"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintTop_toTopOf="@id/player1_name_surname"
		app:layout_constraintBottom_toBottomOf="@id/player2_name_surname"
		app:layout_constraintEnd_toEndOf="@id/score_board"/>

	<TextView
		android:id="@+id/date_time"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginHorizontal="12dp"
		android:layout_marginBottom="16dp"
		android:gravity="end"
		android:text="21 июня, 8:34 · #asv"
		android:textColor="@color/tb_gray_active"
		android:textSize="12sp"
		app:layout_constraintTop_toBottomOf="@id/score_board"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>