<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".profile.appsetttings.AppSettingsFragment">

	<ImageView
		android:id="@+id/back_button"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="6dp"
		android:src="@drawable/chevron_vertical"
		android:visibility="visible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:tint="@color/tb_gray_active" />

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/game_data"
		android:textColor="@color/tb_black"
		android:textSize="16sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/categories_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="29.5dp"
		android:layout_marginHorizontal="20dp"
		app:layout_constraintTop_toBottomOf="@id/title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<View
		android:id="@+id/side_note_background"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="20dp"
		android:layout_marginHorizontal="20dp"
		android:layout_marginBottom="-16dp"
		android:background="@drawable/search_background"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/categories_container"
		app:layout_constraintBottom_toBottomOf="@id/side_note_text"/>

	<TextView
		android:id="@+id/side_note_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginHorizontal="16dp"
		android:text="@string/side_note_title_0"
		android:textColor="@color/tb_primary_green"
		android:textSize="16sp"
		app:layout_constraintStart_toStartOf="@id/side_note_background"
		app:layout_constraintTop_toTopOf="@id/side_note_background"/>

	<TextView
		android:id="@+id/side_note_text"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:text="@string/survey_side_note_text_9"
		android:textSize="12sp"
		app:layout_constraintStart_toStartOf="@id/side_note_background"
		app:layout_constraintEnd_toEndOf="@id/side_note_background"
		app:layout_constraintTop_toBottomOf="@id/side_note_title" />



</androidx.constraintlayout.widget.ConstraintLayout>