<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/background_corners_16dp"
	android:layout_marginTop="8dp"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<FrameLayout
		android:id="@+id/player_photo"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginVertical="16dp"
		android:layout_marginStart="16dp"
		android:background="@drawable/circle_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="8dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<com.google.android.material.imageview.ShapeableImageView
			android:id="@+id/player_image"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/user"
			android:visibility="visible"
			app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />
	</FrameLayout>

	<TextView
		android:id="@+id/name_surname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/name_surname_default"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		android:layout_marginStart="12dp"
		app:layout_constraintStart_toEndOf="@id/player_photo"
		app:layout_constraintTop_toTopOf="@id/player_photo"
		app:layout_constraintBottom_toBottomOf="@id/player_photo"/>

	<ImageView
		android:id="@+id/item_picture"
		android:layout_width="match_parent"
		android:layout_height="393dp"
		android:layout_marginTop="12dp"
		android:scaleType="centerCrop"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/player_photo"/>

	<ImageView
		android:id="@+id/double_rating_icon"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_marginTop="14dp"
		android:layout_marginStart="-9dp"
		android:background="@drawable/rating_users_background"
		android:backgroundTint="@color/tb_new_orange"
		android:padding="4dp"
		android:src="@drawable/rating_power"
		app:layout_constraintTop_toBottomOf="@id/item_picture"
		app:layout_constraintStart_toEndOf="@id/single_rating_icon"/>

	<ImageView
		android:id="@+id/single_rating_icon"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="14dp"
		android:layout_marginBottom="16dp"
		android:background="@drawable/rating_users_background"
		android:backgroundTint="@color/tb_new_green"
		android:padding="4dp"
		android:src="@drawable/rating_power"
		app:layout_constraintTop_toBottomOf="@id/item_picture"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<TextView
		android:id="@+id/info_panel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:text="@string/player_info_panel"
		android:textColor="@color/tb_black"
		app:layout_constraintTop_toTopOf="@id/double_rating_icon"
		app:layout_constraintStart_toEndOf="@id/double_rating_icon"
		app:layout_constraintBottom_toBottomOf="@id/double_rating_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>