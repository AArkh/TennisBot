<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".feed.game.GameFragment">

	<TextView
		android:id="@+id/tab_requests"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="Заявки"
		android:textSize="16sp"
		android:textColor="@color/tb_black"
		android:gravity="center"
		android:layout_marginStart="16dp"
		android:layout_marginTop="18dp"
		android:clickable="true"
		android:focusable="true"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/tab_players"/>

	<View
		android:id="@+id/underline"
		android:layout_width="0dp"
		android:layout_height="2dp"
		android:background="@color/tb_black"
		android:layout_marginTop="10dp"
		app:layout_constraintStart_toStartOf="@id/tab_requests"
		app:layout_constraintTop_toBottomOf="@id/tab_requests"
		app:layout_constraintEnd_toEndOf="@id/tab_requests"/>

	<TextView
		android:id="@+id/tab_players"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="Игроки"
		android:textSize="16sp"
		android:textColor="@color/tb_gray_gray"
		android:gravity="center"
		android:layout_marginEnd="16dp"
		android:layout_marginTop="18dp"
		android:clickable="true"
		android:focusable="true"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/tab_requests"/>

	<TextView
		android:id="@+id/all_filter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="14dp"
		android:background="@drawable/background_corners_100dp"
		android:clickable="true"
		android:drawablePadding="6dp"
		android:focusable="true"
		android:foreground="@drawable/ripple_gray_corners_100dp"
		android:paddingHorizontal="12dp"
		android:paddingVertical="6dp"
		android:text="Все"
		android:textColor="@color/tb_black"
		app:layout_constraintEnd_toStartOf="@id/incoming_filter"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/underline" />

	<TextView
		android:id="@+id/incoming_filter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
		android:layout_marginStart="4dp"
		android:background="@drawable/background_corners_100dp"
		android:backgroundTint="@color/invisible"
		android:text="Входящие"
		android:textColor="@color/tb_gray_gray"
		android:paddingHorizontal="12dp"
		android:paddingVertical="6dp"
		android:clickable="true"
		android:focusable="true"
		android:foreground="@drawable/ripple_gray_corners_100dp"
		app:layout_constraintTop_toBottomOf="@id/underline"
		app:layout_constraintStart_toEndOf="@id/all_filter"
		app:layout_constraintEnd_toStartOf="@id/outcoming_filter"
		android:drawablePadding="6dp"/>

	<TextView
		android:id="@+id/outcoming_filter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
		android:layout_marginStart="4dp"
		android:background="@drawable/background_corners_100dp"
		android:backgroundTint="@color/invisible"
		android:text="Исх"
		android:textColor="@color/tb_gray_gray"
		android:paddingHorizontal="12dp"
		android:paddingVertical="6dp"
		android:clickable="true"
		android:focusable="true"
		android:foreground="@drawable/ripple_gray_corners_100dp"
		app:layout_constraintTop_toBottomOf="@id/underline"
		app:layout_constraintStart_toEndOf="@id/incoming_filter"
		app:layout_constraintEnd_toStartOf="@id/accepted_filter"
		android:drawablePadding="6dp"/>

	<TextView
		android:id="@+id/accepted_filter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
		android:layout_marginStart="4dp"
		android:layout_marginEnd="16dp"
		android:background="@drawable/background_corners_100dp"
		android:backgroundTint="@color/invisible"
		android:text="Подтвержденные"
		android:textColor="@color/tb_gray_gray"
		android:paddingHorizontal="12dp"
		android:paddingVertical="6dp"
		android:clickable="true"
		android:focusable="true"
		android:foreground="@drawable/ripple_gray_corners_100dp"
		app:layout_constraintTop_toBottomOf="@id/underline"
		app:layout_constraintStart_toEndOf="@id/outcoming_filter"
		app:layout_constraintEnd_toStartOf="@id/options_dots"
		android:drawablePadding="6dp"/>

	<ImageView
		android:id="@+id/options_dots"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/options_dots"
		android:layout_marginEnd="16dp"
		android:clickable="true"
		android:focusable="true"
		android:foreground="@drawable/ripple_gray_circle"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/accepted_filter"
		app:layout_constraintBottom_toBottomOf="@id/accepted_filter"/>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="11dp"
		android:background="@color/tb_bg"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
		app:layout_constraintTop_toBottomOf="@id/all_filter"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>