<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".feed.game.GameFragment">

	<HorizontalScrollView
		android:id="@+id/filters"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:scrollbars="none"
		android:visibility="visible"
		android:layout_marginStart="16dp"
		android:layout_marginTop="14dp"
		app:layout_constraintEnd_toStartOf="@id/options_dots"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingEnd="16dp"
			android:orientation="horizontal"
			tools:ignore="RtlSymmetry">

			<TextView
				android:id="@+id/all_filter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/background_corners_100dp"
				android:clickable="true"
				android:focusable="true"
				android:foreground="@drawable/ripple_gray_corners_100dp"
				android:paddingHorizontal="12dp"
				android:paddingVertical="6dp"
				android:text="Все"
				android:textColor="@color/tb_black" />

			<TextView
				android:id="@+id/incoming_filter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="4dp"
				android:background="@drawable/background_corners_100dp"
				android:backgroundTint="@color/invisible"
				android:text="Входящие"
				android:textColor="@color/tb_gray_gray"
				android:paddingHorizontal="12dp"
				android:paddingVertical="6dp"
				android:clickable="true"
				android:focusable="true"
				android:foreground="@drawable/ripple_gray_corners_100dp"
				android:drawablePadding="6dp"/>

			<TextView
				android:id="@+id/outcoming_filter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="4dp"
				android:background="@drawable/background_corners_100dp"
				android:backgroundTint="@color/invisible"
				android:text="Исходящие"
				android:textColor="@color/tb_gray_gray"
				android:paddingHorizontal="12dp"
				android:paddingVertical="6dp"
				android:clickable="true"
				android:focusable="true"
				android:foreground="@drawable/ripple_gray_corners_100dp"
				app:layout_constraintTop_toBottomOf="@id/underline"
				app:layout_constraintStart_toEndOf="@id/incoming_filter"
				app:layout_constraintEnd_toStartOf="@id/accepted_filter"/>

			<TextView
				android:id="@+id/accepted_filter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="4dp"
				android:background="@drawable/background_corners_100dp"
				android:backgroundTint="@color/invisible"
				android:text="Подтвержденные"
				android:textColor="@color/tb_gray_gray"
				android:paddingHorizontal="12dp"
				android:paddingVertical="6dp"
				android:clickable="true"
				android:focusable="true"
				android:foreground="@drawable/ripple_gray_corners_100dp"
				app:layout_constraintTop_toBottomOf="@id/underline"
				app:layout_constraintStart_toEndOf="@id/outcoming_filter"
				app:layout_constraintEnd_toStartOf="@id/options_dots"/>

		</LinearLayout>
	</HorizontalScrollView>

	<View
		android:layout_width="30dp"
		android:layout_height="0dp"
		android:background="@drawable/fade_background"
		app:layout_constraintTop_toTopOf="@id/filters"
		app:layout_constraintEnd_toEndOf="@+id/filters"
		app:layout_constraintBottom_toBottomOf="@id/filters"/>

	<ImageView
		android:id="@+id/options_dots"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/options_dots"
		android:layout_marginEnd="6dp"
		android:padding="10dp"
		android:clickable="true"
		android:focusable="true"
		android:foreground="@drawable/ripple_gray_circle"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/filters"
		app:layout_constraintBottom_toBottomOf="@id/filters"/>

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/swipeRefreshLayout"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="11dp"
		app:layout_constraintTop_toBottomOf="@id/filters"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/container"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:background="@color/tb_bg"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

	<ProgressBar
		android:id="@+id/loadingBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="150dp"
		android:visibility="visible"
		android:layout_gravity="center"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<include
		android:id="@+id/error_layout"
		layout="@layout/error_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>