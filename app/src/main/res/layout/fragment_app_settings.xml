<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".profile.appsetttings.AppSettingsFragment">

	<ImageView
		android:id="@+id/back_button"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="6dp"
		android:src="@drawable/chevron_vertical"
		android:visibility="visible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:tint="@color/tb_gray_active" />

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/settings_title"
		android:textColor="@color/tb_black"
		android:textSize="16sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/categories_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="29.5dp"
		android:layout_marginHorizontal="20dp"
		android:background="@drawable/country_button_outline"
		app:layout_constraintTop_toBottomOf="@id/title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<FrameLayout
		android:id="@+id/custom_switch_layout"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="36dp"
		android:layout_height="20dp"
		android:layout_marginTop="20dp"
		app:layout_constraintStart_toStartOf="@id/categories_container"
		app:layout_constraintTop_toBottomOf="@id/categories_container">

		<View
			android:id="@+id/track"
			android:layout_width="match_parent"
			android:layout_height="8dp"
			android:background="#B0B0B0"
			android:layout_gravity="center_vertical"/>

		<View
			android:id="@+id/thumb"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:background="#2196F3"
			android:elevation="4dp"
			android:layout_gravity="start|center_vertical"/>
	</FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>