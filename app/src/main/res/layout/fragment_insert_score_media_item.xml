<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:background="@color/tb_white"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<TextView
		android:id="@+id/media_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginTop="16dp"
		android:text="@string/insert_score_media_title"
		android:textColor="@color/tb_black"
		android:textSize="17sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/add_photo_holder"
		android:layout_width="0dp"
		android:layout_height="171dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="12dp"
		android:layout_marginEnd="12dp"
		android:background="@drawable/dotted_background_corners_8dp"
		android:scaleType="centerCrop"
		app:layout_constraintEnd_toStartOf="@id/add_video_holder"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/media_title"
		app:shapeAppearanceOverlay="@style/roundedImageView" />

	<TextView
		android:id="@+id/photo_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/add_photo"
		android:textColor="@color/tb_gray_light"
		android:textSize="13sp"
		app:drawableTopCompat="@drawable/mountain"
		app:layout_constraintBottom_toBottomOf="@id/add_photo_holder"
		app:layout_constraintEnd_toEndOf="@id/add_photo_holder"
		app:layout_constraintStart_toStartOf="@id/add_photo_holder"
		app:layout_constraintTop_toTopOf="@id/add_photo_holder" />

	<ImageView
		android:id="@+id/delete_photo_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/x_dark"
		android:padding="10dp"
		android:visibility="invisible"
		app:layout_constraintTop_toTopOf="@id/add_photo_holder"
		app:layout_constraintEnd_toEndOf="@id/add_photo_holder"/>

	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/add_video_holder"
		android:layout_width="0dp"
		android:layout_height="171dp"
		android:layout_marginTop="12dp"
		android:layout_marginEnd="20dp"
		android:background="@drawable/dotted_background_corners_8dp"
		android:scaleType="centerCrop"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/add_photo_holder"
		app:layout_constraintTop_toBottomOf="@id/media_title"
		app:shapeAppearanceOverlay="@style/roundedImageView" />

	<TextView
		android:id="@+id/video_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/add_video"
		android:textColor="@color/tb_gray_light"
		android:textSize="13sp"
		app:drawableTopCompat="@drawable/play_circle"
		app:layout_constraintBottom_toBottomOf="@id/add_video_holder"
		app:layout_constraintEnd_toEndOf="@id/add_video_holder"
		app:layout_constraintStart_toStartOf="@id/add_video_holder"
		app:layout_constraintTop_toTopOf="@id/add_video_holder" />

	<ImageView
		android:id="@+id/delete_video_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/x_dark"
		android:padding="10dp"
		android:visibility="invisible"
		app:layout_constraintTop_toTopOf="@id/add_video_holder"
		app:layout_constraintEnd_toEndOf="@id/add_video_holder"/>

	<TextView
		android:id="@+id/video_duration_timer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/default_time"
		android:paddingHorizontal="5dp"
		android:paddingVertical="2dp"
		android:layout_marginEnd="12dp"
		android:layout_marginBottom="12dp"
		android:visibility="invisible"
		android:textColor="@color/tb_white"
		android:background="@drawable/background_corners_4dp"
		android:backgroundTint="@color/tb_black_card"
		app:layout_constraintEnd_toEndOf="@id/add_video_holder"
		app:layout_constraintBottom_toBottomOf="@id/add_video_holder"/>

	<View
		android:id="@+id/side_note_background"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginHorizontal="20dp"
		android:layout_marginTop="24dp"
		android:layout_marginBottom="-16dp"
		android:background="@drawable/search_background"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="@id/side_note_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/add_photo_holder" />

	<TextView
		android:id="@+id/side_note_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:layout_marginTop="16dp"
		android:text="@string/side_note_title_0"
		android:textColor="@color/tb_primary_green"
		android:textSize="16sp"
		app:layout_constraintStart_toStartOf="@id/side_note_background"
		app:layout_constraintTop_toTopOf="@id/side_note_background" />

	<TextView
		android:id="@+id/side_note_text"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:layout_marginBottom="32dp"
		android:text="@string/side_note_hint_multiplier"
		android:textSize="12sp"
		app:layout_constraintEnd_toEndOf="@id/side_note_background"
		app:layout_constraintStart_toStartOf="@id/side_note_background"
		app:layout_constraintTop_toBottomOf="@id/side_note_title"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>