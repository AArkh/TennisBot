<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/bottomsheet_rounded"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".profile.account.OptionsDialogFragment">

	<TextView
		android:id="@+id/make_photo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="20dp"
		android:paddingBottom="12dp"
		android:gravity="center"
		android:text="Сделать фото"
		android:textColor="@color/tb_black"
		android:textSize="15sp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/pick_from_gallery"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:gravity="center"
		android:text="Выбрать фото из галереи"
		android:textColor="@color/tb_black"
		android:textSize="15sp"
		app:layout_constraintTop_toBottomOf="@id/make_photo"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/cancel_dialog"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/tb_bg_card"
		android:gravity="center"
		android:paddingTop="16dp"
		android:paddingBottom="20dp"
		android:text="@string/cancel"
		android:textColor="@color/tb_gray_active"
		android:textSize="15sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/pick_from_gallery" />
</androidx.constraintlayout.widget.ConstraintLayout>