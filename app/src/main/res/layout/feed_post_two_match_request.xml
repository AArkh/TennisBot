<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/background_corners_16dp"
	android:layout_marginTop="8dp"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<tennis.bot.mobile.utils.view.ImageSeriesView
		android:id="@+id/player_photo"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginVertical="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/name_surname"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="@string/name_surname_default"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		android:layout_marginStart="12dp"
		app:layout_constraintStart_toEndOf="@id/player_photo"
		app:layout_constraintEnd_toStartOf="@+id/post_type"
		app:layout_constraintTop_toTopOf="@id/player_photo"
		app:layout_constraintBottom_toTopOf="@id/location_sub_title"/>

	<TextView
		android:id="@+id/location_sub_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/post_two_location_subtitle"
		android:textColor="@color/tb_gray_gray"
		android:textSize="13sp"
		android:layout_marginStart="12dp"
		app:layout_constraintStart_toEndOf="@id/player_photo"
		app:layout_constraintTop_toBottomOf="@id/name_surname"
		app:layout_constraintBottom_toBottomOf="@id/player_photo"/>

	<TextView
		android:id="@+id/post_type"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:gravity="center"
		android:text="@string/post_type_2"
		android:textColor="@color/tb_primary_green"
		android:textSize="14sp"
		android:layout_marginEnd="16dp"
		android:layout_marginVertical="3dp"
		android:background="@drawable/outline_8dp_1dp"
		android:backgroundTint="@color/tb_gray_active"
		android:paddingHorizontal="12dp"
		android:paddingVertical="6dp"
		android:layout_marginStart="12dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/player_photo"
		app:layout_constraintBottom_toBottomOf="@id/player_photo"/>

	<ImageView
		android:id="@+id/item_picture"
		android:layout_width="match_parent"
		android:layout_height="393dp"
		android:layout_marginTop="12dp"
		android:scaleType="centerCrop"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/player_photo"/>

	<include
		android:id="@+id/info_panel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		layout="@layout/feed_post_two_info_panel"
		app:layout_constraintStart_toStartOf="@id/item_picture"
		app:layout_constraintEnd_toEndOf="@id/item_picture"
		app:layout_constraintBottom_toBottomOf="@id/item_picture"/>

	<TextView
		android:id="@+id/request_comment"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginHorizontal="16dp"
		android:text="@string/request_comment_placeholder"
		android:textColor="@color/tb_black"
		app:layout_constraintTop_toBottomOf="@id/item_picture"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/like_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="18dp"
		android:text="99"
		android:gravity="center"
		app:layout_constraintTop_toBottomOf="@id/request_comment"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:drawableLeftCompat="@drawable/fire" />

	<TextView
		android:id="@+id/message_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="18dp"
		android:text=""
		android:gravity="center"
		app:layout_constraintTop_toBottomOf="@id/request_comment"
		app:layout_constraintStart_toEndOf="@id/like_button"
		app:layout_constraintBottom_toBottomOf="parent"
		app:drawableLeftCompat="@drawable/telegram_big" />

	<TextView
		android:id="@+id/date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="18dp"
		android:text="@string/time_ago"
		android:textSize="12sp"
		android:textColor="@color/tb_gray_gray"
		android:gravity="center"
		app:layout_constraintTop_toBottomOf="@id/request_comment"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>