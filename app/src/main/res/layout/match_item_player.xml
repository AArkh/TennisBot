<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<FrameLayout
		android:id="@+id/player_photo"
		android:layout_width="56dp"
		android:layout_height="56dp"
		android:layout_marginTop="24dp"
		android:background="@drawable/circle_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="15dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<com.google.android.material.imageview.ShapeableImageView
			android:id="@+id/player_image"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/user"
			android:visibility="visible"
			app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

	</FrameLayout>

	<FrameLayout
		android:id="@+id/trophy"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/background_corners_100dp"
		android:padding="4dp"
		android:elevation="2dp"
		android:layout_marginBottom="-4dp"
		android:layout_marginEnd="-4dp"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="@id/player_photo"
		app:layout_constraintEnd_toEndOf="@id/player_photo">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/trophy"/>
	</FrameLayout>


	<TextView
		android:id="@+id/player_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="Name"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/player_photo" />

	<ImageView
		android:id="@+id/player_rating_image"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:background="@drawable/rating_power_background"
		android:padding="3dp"
		android:src="@drawable/rating_power"
		app:layout_constraintBottom_toBottomOf="@id/player_rating_value"
		app:layout_constraintEnd_toStartOf="@id/player_rating_value"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/player_name"
		app:layout_constraintHorizontal_chainStyle="packed"/>

	<TextView
		android:id="@+id/player_rating_value"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginStart="4dp"
		android:gravity="center"
		android:text="1817"
		android:textColor="@color/tb_black"
		android:textSize="13sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@id/player_rating_image"
		app:layout_constraintStart_toEndOf="@id/player_rating_image"
		app:layout_constraintEnd_toStartOf="@id/player_score_change"
		app:layout_constraintTop_toTopOf="@id/player_rating_image" />

	<TextView
		android:id="@+id/player_score_change"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginStart="4dp"
		android:background="@drawable/background_corners_4dp"
		android:backgroundTint="@color/tb_bland_green"
		android:drawablePadding="2dp"
		android:gravity="center"
		android:paddingStart="5dp"
		android:paddingEnd="6dp"
		android:text="365"
		android:textColor="@color/tb_primary_green"
		android:textSize="11sp"
		app:drawableStartCompat="@drawable/vector_up"
		app:layout_constraintBottom_toBottomOf="@id/player_rating_value"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/player_rating_value"
		app:layout_constraintTop_toTopOf="@id/player_rating_value" />

</androidx.constraintlayout.widget.ConstraintLayout>
