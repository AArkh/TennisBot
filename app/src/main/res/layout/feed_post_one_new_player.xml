<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="8dp"
	android:background="@drawable/background_corners_16dp">

	<tennis.bot.mobile.utils.view.ImageSeriesView
		android:id="@+id/player_photo"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginVertical="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintBottom_toTopOf="@id/item_picture"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/name_surname"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="12dp"
		android:text="@string/name_surname_default"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		app:layout_constraintBottom_toTopOf="@id/sub_title"
		app:layout_constraintStart_toEndOf="@id/player_photo"
		app:layout_constraintEnd_toStartOf="@+id/post_type"
		app:layout_constraintTop_toTopOf="@id/player_photo" />

	<TextView
		android:id="@+id/sub_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="12dp"
		android:text="@string/new_player"
		android:textColor="@color/tb_gray_gray"
		android:textSize="13sp"
		app:layout_constraintBottom_toBottomOf="@id/player_photo"
		app:layout_constraintStart_toEndOf="@id/player_photo"
		app:layout_constraintTop_toBottomOf="@id/name_surname" />

	<TextView
		android:id="@+id/post_type"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginVertical="3dp"
		android:layout_marginStart="12dp"
		android:layout_marginEnd="16dp"
		android:background="@drawable/outline_8dp_1dp"
		android:backgroundTint="@color/tb_gray_active"
		android:gravity="center"
		android:paddingHorizontal="12dp"
		android:paddingVertical="6dp"
		android:text="@string/post_type_1"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="@id/player_photo"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/player_photo" />

	<ImageView
		android:id="@+id/item_picture"
		android:layout_width="match_parent"
		android:layout_height="393dp"
		android:layout_marginTop="12dp"
		android:scaleType="centerCrop"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/player_photo" />

	<ImageView
		android:id="@+id/single_rating_icon"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="14dp"
		android:layout_marginBottom="16dp"
		android:background="@drawable/rating_users_background"
		android:backgroundTint="@color/tb_new_green"
		android:padding="4dp"
		android:src="@drawable/rating_power"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/item_picture" />

	<TextView
		android:id="@+id/info_panel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:text="@string/player_new_info_panel"
		android:textColor="@color/tb_black"
		app:layout_constraintBottom_toBottomOf="@id/single_rating_icon"
		app:layout_constraintStart_toEndOf="@id/single_rating_icon"
		app:layout_constraintTop_toTopOf="@id/single_rating_icon" />

	<TextView
		android:id="@+id/like_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="12dp"
		android:layout_marginBottom="18dp"
		android:gravity="center"
		android:text="99"
		app:drawableLeftCompat="@drawable/fire"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/single_rating_icon" />

	<TextView
		android:id="@+id/message_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="12dp"
		android:layout_marginBottom="18dp"
		android:gravity="center"
		android:text=""
		app:drawableLeftCompat="@drawable/telegram_big"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/like_button"
		app:layout_constraintTop_toBottomOf="@id/single_rating_icon" />

	<TextView
		android:id="@+id/date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="18dp"
		android:gravity="center"
		android:text="@string/time_ago"
		android:textColor="@color/tb_gray_gray"
		android:textSize="12sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/single_rating_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>