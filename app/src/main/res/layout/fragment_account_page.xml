<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".profile.account.AccountPageFragment"
	android:backgroundTint="@color/tb_gray_border">

	<ImageView
		android:id="@+id/back_button"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="6dp"
		android:src="@drawable/chevron_left_wide"
		android:visibility="visible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:tint="@color/tb_gray_active" />

	<ImageView
		android:id="@+id/options_button"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_marginEnd="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="6dp"
		android:src="@drawable/options_dots"
		android:visibility="visible"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:tint="@color/tb_gray_active" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/back_button" />

	<ProgressBar
		android:id="@+id/loadingBar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="150dp"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<LinearLayout
		android:id="@+id/error_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="80dp"
		android:gravity="center"
		android:orientation="vertical"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<ImageView
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@android:drawable/stat_notify_error"
			android:tintMode="multiply"
			tools:layout_editor_absoluteX="182dp"
			tools:layout_editor_absoluteY="354dp"
			app:tint="@color/tb_gray_light" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/error_text"/>
		<TextView
			android:id="@+id/tryAgainTv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/error_try_again_text" />

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>