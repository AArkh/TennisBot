<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/tb_white"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<View
		android:id="@+id/side_note_background"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginHorizontal="20dp"
		android:layout_marginTop="12dp"
		android:layout_marginBottom="-16dp"
		android:background="@drawable/search_background"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="@id/side_note_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/side_note_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:layout_marginTop="16dp"
		android:text="@string/side_note_title_0"
		android:textColor="@color/tb_primary_green"
		android:textSize="17sp"
		app:layout_constraintStart_toStartOf="@id/side_note_background"
		app:layout_constraintTop_toTopOf="@id/side_note_background" />

	<TextView
		android:id="@+id/side_note_text"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:layout_marginBottom="32dp"
		android:text="@string/side_note_hint_multiplier"
		android:textSize="13sp"
		app:layout_constraintEnd_toEndOf="@id/side_note_background"
		app:layout_constraintStart_toStartOf="@id/side_note_background"
		app:layout_constraintTop_toBottomOf="@id/side_note_title"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>