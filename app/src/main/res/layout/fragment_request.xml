<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".feed.requestcreation.RequestCreationFragment">

	<ImageView
		android:id="@+id/back_button"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:padding="6dp"
		android:src="@drawable/chevron_left_wide"
		android:visibility="visible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:tint="@color/tb_gray_active" />

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/create_request_title"
		android:textColor="@color/tb_black"
		android:textSize="16sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="26dp"
		android:layout_marginBottom="8dp"
		tools:listitem="@layout/recycler_gamedata_item"
		tools:itemCount="5"
		app:layout_constraintTop_toBottomOf="@id/title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@id/buttonCreate"/>

	<Button
		android:id="@+id/buttonCreate"
		style="@style/Widget.TennisBot.Button.Inactive"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_marginHorizontal="20dp"
		android:layout_marginBottom="8dp"
		android:enabled="false"
		android:text="@string/create"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<ProgressBar
		android:id="@+id/button_loading_anim"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:indeterminate="true"
		android:indeterminateTint="@color/tb_white"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="@id/buttonCreate"
		app:layout_constraintLeft_toLeftOf="@id/buttonCreate"
		app:layout_constraintRight_toRightOf="@id/buttonCreate"
		app:layout_constraintTop_toTopOf="@id/buttonCreate"
		tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>