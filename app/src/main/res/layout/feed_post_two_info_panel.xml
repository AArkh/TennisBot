<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingHorizontal="16dp"
	android:paddingVertical="12dp"
	android:background="@drawable/gradient_black_to_invisible">

	<FrameLayout
		android:id="@+id/day_month_layout"
		android:layout_width="43dp"
		android:layout_height="42dp"
		android:background="@drawable/outline_8dp_1dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TextView
			android:id="@+id/month"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center"
			android:padding="2dp"
			android:text="@string/month_text"
			android:textColor="@color/tb_white"
			android:textSize="11sp" />

		<TextView
			android:id="@+id/day"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|center"
			android:text="29"
			android:textColor="@color/tb_white"
			android:textSize="24sp" />
	</FrameLayout>

	<TextView
		android:id="@+id/time_and_day"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:gravity="center|start"
		android:text="@string/day_and_time"
		android:textColor="@color/tb_white"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="@id/day_month_layout"
		app:layout_constraintEnd_toStartOf="@+id/separator"
		app:layout_constraintStart_toEndOf="@+id/day_month_layout"
		app:layout_constraintTop_toTopOf="@id/day_month_layout" />

	<View
		android:id="@+id/separator"
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:layout_marginHorizontal="36dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/day_month_layout"
		app:layout_constraintBottom_toBottomOf="@id/day_month_layout"
		android:background="@drawable/underline"
		android:backgroundTint="@color/tb_white_semi_transparent"/>

	<ImageView
		android:id="@+id/rating_icon"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:background="@drawable/rating_users_background"
		android:backgroundTint="@color/tb_white"
		android:layout_marginStart="12dp"
		android:padding="4dp"
		android:src="@drawable/rating_power"
		app:layout_constraintStart_toEndOf="@id/separator"
		app:layout_constraintTop_toTopOf="@id/day_month_layout"
		app:layout_constraintBottom_toBottomOf="@id/day_month_layout"
		app:tint="@color/tb_black" />

	<TextView
		android:id="@+id/rating_and_skill"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:gravity="center|start"
		android:text="@string/rating_and_skill"
		android:textColor="@color/tb_white"
		android:textSize="14sp"
		app:layout_constraintStart_toEndOf="@+id/rating_icon"
		app:layout_constraintTop_toTopOf="@id/day_month_layout"
		app:layout_constraintBottom_toBottomOf="@id/day_month_layout"
		app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>