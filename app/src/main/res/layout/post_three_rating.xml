<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginStart="6dp"
	android:background="@drawable/search_background">

	<ImageView
		android:id="@+id/rating_icon"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginVertical="6dp"
		android:layout_marginStart="12dp"
		android:background="@drawable/rating_users_background"
		android:backgroundTint="@color/tb_new_green"
		android:padding="7dp"
		android:src="@drawable/rating_power"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/ratings"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:gravity="start|center"
		android:text="@string/two_ratings"
		android:textColor="@color/tb_black"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/rating_icon"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/player1_score_change"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="7dp"
		android:drawablePadding="2dp"
		android:gravity="center"
		android:paddingStart="5dp"
		android:paddingEnd="12dp"
		android:text="365"
		android:textColor="@color/tb_primary_green"
		android:textSize="13sp"
		app:drawableStartCompat="@drawable/vector_up"
		app:layout_constraintBottom_toTopOf="@id/player2_score_change"
		app:layout_constraintStart_toEndOf="@id/ratings"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/player2_score_change"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:drawablePadding="2dp"
		android:gravity="center"
		android:paddingStart="5dp"
		android:paddingEnd="12dp"
		android:text="365"
		android:textColor="@color/tb_red"
		android:textSize="13sp"
		app:drawableStartCompat="@drawable/vector_down"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/ratings"
		app:layout_constraintTop_toBottomOf="@id/player1_score_change" />

</androidx.constraintlayout.widget.ConstraintLayout>