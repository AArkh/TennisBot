<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/bottomsheet_rounded"
	tools:context=".feed.insertscore.InsertScoreDialogFragment">

	<ImageView
		android:id="@+id/close_button"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="22.5dp"
		android:layout_marginEnd="90dp"
		android:padding="3dp"
		android:background="@drawable/search_background"
		android:backgroundTint="@color/tb_gray_border"
		android:src="@drawable/x"
		app:layout_constraintEnd_toStartOf="@+id/title"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="24dp"
		android:text="@string/insert_score_set_item_title"
		android:textSize="20sp"
		android:textColor="@color/tb_black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<NumberPicker
		android:id="@+id/basic_score"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="35dp"
		android:theme="@style/Theme.TennisBot.NumberPicker"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/title"
		app:layout_constraintBottom_toTopOf="@id/buttonChoose"/>

	<NumberPicker
		android:id="@+id/left_tie_break"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="35dp"
		android:visibility="gone"
		android:theme="@style/Theme.TennisBot.NumberPicker"
		app:layout_constraintBottom_toTopOf="@id/buttonChoose"
		app:layout_constraintEnd_toStartOf="@id/basic_score"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/title"
		app:layout_constraintVertical_bias="0.0" />

	<NumberPicker
		android:id="@+id/right_tie_break"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="35dp"
		android:visibility="gone"
		android:theme="@style/Theme.TennisBot.NumberPicker"
		app:layout_constraintBottom_toTopOf="@id/buttonChoose"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/basic_score"
		app:layout_constraintTop_toBottomOf="@id/title"
		app:layout_constraintVertical_bias="0.0" />

	<ImageView
	android:alpha="0.15"
	android:layout_width="match_parent"
	android:layout_height="46dp"
	android:layout_marginHorizontal="20dp"
	android:src="@drawable/background_corners_12dp"
	app:tint="@color/tb_gray_active"
	app:layout_constraintStart_toStartOf="@id/basic_score"
	app:layout_constraintEnd_toEndOf="@id/basic_score"
	app:layout_constraintTop_toTopOf="@id/basic_score"
	app:layout_constraintBottom_toBottomOf="@id/basic_score" />

	<Button
		android:id="@+id/buttonChoose"
		style="@style/Widget.TennisBot.Button.Active"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="20dp"
		android:layout_marginTop="40dp"
		android:text="@string/button_choose"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/basic_score"
		app:layout_constraintBottom_toTopOf="@id/cancel_dialog"/>

	<TextView
		android:id="@+id/cancel_dialog"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/tb_bg_card"
		android:gravity="center"
		android:paddingTop="16dp"
		android:paddingBottom="20dp"
		android:layout_marginTop="20dp"
		android:text="@string/cancel"
		android:textColor="@color/tb_gray_active"
		android:textSize="15sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/buttonChoose" />


</androidx.constraintlayout.widget.ConstraintLayout>